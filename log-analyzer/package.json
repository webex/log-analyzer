{
  "name": "microservice-log-analyzer",
  "displayName": "Microservice Log Analyzer",
  "description": "A modern log analyzer for microservices with tracking ID search capabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "enabledApiProposals": [
    "languageModelSystem",
    "chatProvider",
    "contribLanguageModelToolSets"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "microservice-log-analyzer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "microservice-log-analyzer.search",
        "title": "Search Tracking ID"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "opensearch-mcp-server",
        "label": "OpenSearch MCP Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "microservice-log-analyzer",
          "title": "Log Analyzer",
          "icon": "./resources/icon-dark.svg"
        }
      ]
    },
    "views": {
      "microservice-log-analyzer": [
        {
          "type": "webview",
          "id": "logAnalyzerView",
          "name": "Search Logs",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "microservice-log-analyzer.refresh",
          "when": "view == logAnalyzerView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
